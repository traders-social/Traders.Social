<div class="container-fluid container-form">
    <div class="row">
        <div class="col">
            <div class="form">
                <header class="form-title">
                    <h2><i class="fas fa-plus-square"></i>{{ create ? "Create" : "Edit" }} an Auction</h2>
                </header>

                <div class="container">
                    <div class="row">
                        <div class="col-2">
                            {{ form_label(form.title) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.title) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <span class="field-error">{{ form_errors(form.title) }}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            {{ form_label(form.description) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.description) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <span class="field-error">{{ form_errors(form.description) }}</span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-2">
                            {{ form_label(form.media) }}
                        </div>
                        <div class="col">
                            <div class="input-group mb-3 image-preview-container">
                                <label for="auction_edit_media" class="image-preview-label">
                                    <img src="" id="auction_edit_media_preview" class="image-preview">
                                </label>
                                {{ form_widget(form.media) }}
                            </div>
                        </div>
                    </div>
                    <div class="row row-errors">
                        <div class="col">
                            <span class="field-error">{{ form_errors(form.media) }}</span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col">
                            {{  form_widget(form.publish) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>