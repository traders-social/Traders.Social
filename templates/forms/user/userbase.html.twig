<div class="container-form container-form">
    <div class="row">
        <div class="col">
            <div class="form">
                <header class="form-title">
                    <h2><i class="fas fa-key"></i>&nbsp;Account information</h2>
                </header>

                <div class="container">
                    <div class="row">
                        <div class="col-2">
                            {{ form_label(user.username) }}
                        </div>
                        <div class="col">
                            {{ form_widget(user.username) }}
                        </div>
                    </div>
                    <div class="row row-errors">
                        <div class="col">
                            <span class="field-error">{{ form_errors(user.username) }}</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            {{ form_label(user.plainPassword.first) }}
                        </div>
                        <div class="col">
                            {{ form_widget(user.plainPassword.first) }}
                        </div>
                    </div>

                    <div class="row row-errors">
                        <div class="col">
                            <span class="field-error">{{ form_errors(user.plainPassword.first) }}</span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            {{ form_label(user.plainPassword.second) }}
                        </div>
                        <div class="col">
                            {{ form_widget(user.plainPassword.second) }}
                        </div>
                    </div>

                    <div class="row row-errors">
                        <div class="col">
                            <span class="field-error">{{ form_errors(user.plainPassword.second) }}</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>