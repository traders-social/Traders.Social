<div class="container-fluid container-form">
    <div class="row">
        <div class="col">
            <div class="form">
                <header class="form-title">
                    <h2><i class="fas fa-key"></i>Account information</h2>
                </header>

                <div class="container">
                    <div class="row">
                        {{ form_label(user.username) }}
                        <div class="col">
                            {{ form_widget(user.username, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <span class="field-error">{{ form_errors(user.username) }}</span>
                        </div>
                    </div>

                    <div class="row">
                        {{ form_label(user.plainPassword.first) }}
                        <div class="col">
                            {{ form_widget(user.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <span class="field-error">{{ form_errors(user.plainPassword.first) }}</span>
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(user.plainPassword.second) }}
                        <div class="col">
                            {{ form_widget(user.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <span class="field-error">{{ form_errors(user.plainPassword.second) }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>