<div class="container-fluid container-form">
    <div class="row">
        <div class="col">
            <div class="form form-inline">
                <header class="form-title">
                    <h2><i class="fas fa-address-card"></i>Personal information</h2>
                </header>

                <div class="container">
                    <div class="row">
                        {{ form_label(userinfo.firstname) }}
                        {{ form_widget(userinfo.firstname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="row">
                        <span class="field-error">{{ form_errors(userinfo.firstname) }}</span>
                    </div>

                    <div class="row">
                        {{ form_label(userinfo.lastname) }}
                        {{ form_widget(userinfo.lastname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="row">
                        <span class="field-error">{{ form_errors(userinfo.lastname) }}</span>
                    </div>

                    <div class="row">
                        {{ form_label(userinfo.phone) }}
                        {{ form_widget(userinfo.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="row">
                        <span class="field-error">{{ form_errors(userinfo.phone) }}</span>
                    </div>


                    <div class="row">
                        {{ form_label(userinfo.email) }}
                        {{ form_widget(userinfo.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="row">
                        <span class="field-error">{{ form_errors(userinfo.email) }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>