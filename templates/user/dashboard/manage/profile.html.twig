{% extends 'base.html.twig' %}
{% block title %}üêü Traders.Social - Editing profile of {{ app.user.username }}{% endblock %}

{% block header %}
    {% include 'structure/navigation/navigation.top.html.twig' %}
{% endblock %}

{% block breadcrumbs %}
    {% include 'structure/navigation/breadcrumbs.html.twig' with {'breadcrumbs': [
        { 'label': 'Dashboard', 'path': 'manage.dashboard' },
        { 'label': 'Edit Profile', 'path': '#' },
    ]} %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <header class="form-title">
                    <h2><i class="fas fa-address-card"></i>&nbsp;Manage your profile</h2>
                </header>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="container-form">
                    {{ form_start(form) }}
                    {% include '/forms/user/profile/edit.html.twig' with { 'form': form } %}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
            <div class="col-4">
                {% include 'structure/navigation/user/dashboard.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {% include 'structure/navigation/navigation.footer.html.twig' %}
{% endblock %}