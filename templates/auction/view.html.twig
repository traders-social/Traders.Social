{% extends 'base.html.twig' %}
{% block title %}üêü Traders.Social - {{ auction.title }}{% endblock %}

{% block header %}
    {% include 'structure/navigation/navigation.top.html.twig' %}
{% endblock %}

{% block breadcrumbs %}
        {% include 'structure/navigation/breadcrumbs.html.twig' with {'breadcrumbs': [
            { 'label': 'Auctions', 'path': 'auction.list' },
            { 'label': auction.title | capitalize, 'path': '#' }
        ]} %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <header class="form-title">
                    <h2>{{ auction.title }}</h2>
                </header>
                <div class="container-fluid">
                    <div class="row">
                        <div class="description col">
                            {{ auction.description }}
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col">Place a bid!</div>
        </div>
        {{ form_start(bidform) }}
        <div class="row">
            <div class="col">{{ form_label(bidform.amount) }}</div>
            <div class="col">{{ form_widget(bidform.amount) }}</div>
        </div>
        {{ form_end(bidform) }}
    </div>
{% endblock %}

{% block footer %}
    {% include 'structure/navigation/navigation.footer.html.twig' %}
{% endblock %}